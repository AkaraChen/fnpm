{
    "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
    "assist": { "actions": { "source": { "organizeImports": "on" } } },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noExplicitAny": "off"
            },
            "style": {
                "noNonNullAssertion": "off"
            },
            "correctness": {
                "noUnusedImports": "error",
                "noUnusedVariables": "error",
                "noUnusedPrivateClassMembers": "error"
            }
        }
    },
    "json": {
        "parser": {
            "allowComments": true,
            "allowTrailingCommas": true
        }
    },
    "vcs": {
        "enabled": true,
        "clientKind": "git"
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "jsxQuoteStyle": "single"
        }
    },
    "formatter": {
        "indentWidth": 4,
        "indentStyle": "space"
    },
    "overrides": [
        {
            "includes": ["packages/fnpm-dev/src/components/ui/**"],
            "linter": {
                "enabled": false
            }
        }
    ]
}
