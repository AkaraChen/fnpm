{
    "extends": "../../tsconfig.base.app.json",
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/.server/**/*.ts",
        "**/.server/**/*.tsx",
        "**/.client/**/*.ts",
        "**/.client/**/*.tsx"
    ],
    "compilerOptions": {
        "types": ["vite/client"],
        "baseUrl": ".",
        "paths": {
            "~/*": ["./app/*"]
        },

        "noEmit": true
    }
}
