{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [
                "dist/**",
                "build/**",
                ".next/**",
                "!.next/cache/**",
                ".mastra"
            ]
        },
        "dev": {
            "persistent": true,
            "cache": false
        },
        "lint": {
            "outputs": []
        }
    }
}
